# Example environment variables for Edusity
# Copy to .env and fill values before deploying locally or on a platform that uses env files

# MongoDB connection string
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/edusity?retryWrites=true&w=majority

# JWT secret for signing tokens
JWT_SECRET=your_jwt_secret_here

# Node environment: development or production
NODE_ENV=production

# Port (optional)
PORT=5000
